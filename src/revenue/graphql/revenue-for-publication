#import "../../common/graphql/common.graphql"
#import "../../publications/graphql/publication-fragments.graphql"

query RevenueFromPublication($request: PublicationRevenueRequest!) {
  revenueFromPublication(request: $request) {
    publication {
      ... on Post {
        ...PostFields
      }

      ... on Comment {
        ...CommentFields
      }

      ... on Mirror {
        ...MirrorFields
      }

      ... on Quote {
        ...QuoteFields
      }
    }

    revenue {
      total {
        ...AmountFields
      }
    }
  }
}
